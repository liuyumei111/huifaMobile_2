@px: 2px;

html, body {
  background: #fff;
}

//~~~~~~首页开始~~~~~~
header {
  width: 100%;
  line-height: 100/@px;
  //background: red;
  text-align: center;
  h1 {
    font-size: 36/@px;
    color: #141414;
    i {
      width: 56/@px;
      height: 56/@px;
      background: url("../images/logo.png") no-repeat;
      background-size: cover;
      display: inline-block;
      vertical-align: -12/@px;
      margin-right: 15/@px;

    }
  }
}

//主要内容
.content-box {
  //轮播图
  .swiper-container {
    width: 100%;
    //height: 600/@px;
    margin: 0/@px auto;
    .swiper-slide {
      text-align: center;
      font-size: 18/@px;
      background: #fff;
      img {
        width: 100%;
        height: 100%;
      }
    }
  }
  // <!--全网解决方案-->
  .solve {
    width: 100%;
    //height: 470/@px;
    h2 {
      line-height: 100/@px;
      text-align: center;
      font-size: 34/@px;
      color: #151410;
      font-weight: 600;
    }
    .solve-ul {
      padding: 30/@px 6% 40/@px 6%;
      width: 100%;
      display: flex;
      flex-wrap: wrap;
      a{
        width: 50%;
        margin-bottom: 40/@px;
        li{
          img {
            width: 82/@px;
            height: 82/@px;
            display: block;
            margin: auto;
          }
          span {
            font-size: 28/@px;
            color: #151410;
            display: block;
            text-align: center;
            margin-top: 20/@px;
          }
        }
      }
    }
  }
  //<!--定制开发流程-->
  .flow {
    width: 100%;
    height: 500/@px;
    background: #eeeeee;
    h2 {
      text-align: center;
      line-height: 110/@px;
      font-size: 34/@px;
      font-weight: 600;
    }
    .liucheng-img {
      width: 92%;
      height: 390/@px;
      margin: 0 auto;
      padding-bottom: 50/@px;
      img {
        width: 100%;
        height: 100%;
      }
    }
  }
}
//拨打电话
.compant-tel{
  position: fixed;
  right: -16/@px;
  bottom: 300/@px;
  width: 300/@px;
  height: 70/@px;
  line-height: 70/@px;
  background-size: 100% 100%;
  background: #91c6e1;
  border-radius: 20/@px;
  a{
    color: #fff;
    font-size: 0.8rem;
    margin-left: 2.0rem;
  }
  i{
    width: 40/@px;
    height: 40/@px;
    display: inline-block;
    background: url("../images/tel1.png")no-repeat;
    background-size: cover;
    position: absolute;
    top:8px;
    left: 5px;
  }
}


//  在线提交
.tijao {
  width: 100%;
  h2 {
    font-size: 34/@px;
    font-weight: 600;
    text-align: center;
    line-height: 120/@px;
  }
  #name, #tel {
    width: 80%;
    height: 100/@px;
    outline: none;
    margin-left: 10%;
    padding-left: 20/@px;
    margin-bottom: 20/@px;
    background: #f6f6f6;
    box-shadow: none;
    border: none;
    -webkit-appearance: none;
  }
  #conDetail {
    width: 80%;
    height: 200/@px;
    outline: none;
    margin-left: 10%;
    padding: 20/@px;
    background: #f6f6f6;
    border: none;
    -webkit-appearance: none;
  }
  .bottom{
    width: 80%;
    margin-left: 10%;
    line-height: 90/@px;
    background: #1296db;
    border-radius: 15/@px;
    text-align: center;
    color: #ffffff;
    font-size: 36/@px;
    margin-top: 40/@px;
    margin-bottom: 40/@px;

  }
}



//~~~~~~首页结束~~~~~~


//~~~~~~app页面开始~~~~~~
.header{
  background: #1296db;
  position: relative;
  h1{
    color: #ffffff;
  }
  span{
    width: 25/@px;
    height: 25/@px;
    border-bottom: 1px solid #fff;
    border-left: 1px solid #fff;
    display: inline-block;
    transform: rotate(45deg);
    position: absolute;
    top:35%;
    left: 5%;
  }

}
.app-box{
  width: 100%;
  padding: 0 5%;
  margin-bottom: 40/@px;
  .app-ul{
    li{
      .app-img{
        margin-top: 40/@px;
        img{
          width: 100%;
        }
      }
      >h2{
        font-size: 32/@px;
        color: #060606;
        font-weight: 600;
        margin-top: 25/@px;
        margin-bottom: 20/@px;
      }
      >i{
        width: 50/@px;
        height: 5/@px;
        background: #1296db;
        display: block;
      }

    }
  }
}

//~~~~~~app页面结束~~~~~~